{
  "name": "@hrwg/watch-together",
  "private": true,
  "version": "1.0.0",
  "description": "Platform to watch videos together with friends",
  "main": "server.ts",
  "scripts": {
    "postinstall": "pm2 install typescript",
    "start": "pm2-dev start ecosystem.config.js",
    "production": "pm2 start ecosystem.config.js --env production",
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/server/index.ts --outDir dist/server",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "eslint src/",
    "lint:ts:fix": "eslint src/ --fix",
    "lint:css": "stylelint src/",
    "lint:css:fix": "stylelint src/ --fix",
    "deploy": "pm2 deploy production"
  },
  "keywords": [
    "watchtogether",
    "videos",
    "youtube",
    "dailymotion",
    "websockets",
    "vue"
  ],
  "author": {
    "name": "Rico Herwig",
    "email": "rherwig4711@gmail.com"
  },
  "contributors": [
    {
      "name": "Patrick Hlustik",
      "email": "patrick.hlustik@googlemail.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@kellerkinder/eslint-config": "^2.0.0",
    "@kellerkinder/stylelint-config": "^1.0.0",
    "@tailwindcss/forms": "^0.3.3",
    "@types/node": "^16.11.3",
    "@types/youtube": "^0.0.46",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.1",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "pm2": "^5.1.2",
    "postcss": "^8.3.0",
    "sass": "^1.33.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.2.15",
    "vite": "^2.3.3"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@vue/server-renderer": "^3.2.17",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cross-fetch": "^3.1.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^6.0.8",
    "serve-static": "^1.14.1",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0",
    "typescript": "^4.4.4",
    "unique-names-generator": "^4.6.0",
    "vue": "^3.2.17",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  }
}
